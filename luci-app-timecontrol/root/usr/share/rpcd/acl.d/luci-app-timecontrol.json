{
   "luci-app-timecontrol": {
	"description": "Grant UCI Internet time control for luci-app-timecontrol",
	"read": {

            "ubus": {

                        "file": ["exec", "list", "stat", "read"],
                        "uci": [ "*" ],
                        "timecontrol": ["*"]
            },
            "file": {
                "/usr/bin/timecontrol-quota": ["exec"],
                "/usr/libexec/timecontrol-status": ["exec"],
                "/tmp/timecontrol_quota.json": ["read"],
                "/etc/timecontrol_quota.json": ["read"]
            }
	},
	"write": {
            "ubus": {
                "timecontrol": ["*"],
                "file": ["write"],
                "uci": ["*"]
            },
            "file": {
                "/etc/timecontrol_quota.json": ["write"]
            }
    }
  }
}
